@page
@model MyFrontend.Pages.Trains.CreateModel
<h2>Add train</h2>

<form method="post">
    <div>
        <label>Name</label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div>
        <label>Number of seats</label>
        <input asp-for="Input.NumberOfSeats" class="form-control" />
        <span asp-validation-for="Input.NumberOfSeats" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
